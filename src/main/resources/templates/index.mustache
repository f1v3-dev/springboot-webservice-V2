{{>layout/header}}


<div class="header">
    <form action="/posts/search" method="GET" class="form-inline p-2 bd-highlight" role="search">
    <input type="text" name="keyword" class="form-control" id="search" placeholder="검색">
    <button class="btn btn-success bi bi-search">검색</button>
    </form>
    <div class="col-md-12">
        <!-- 로그인 기능 영역-->
        <div class="row">
            <div class="col-md-12">
                <a href="/posts/save" role="button"
                   class="btn float-right btn-primary">글 등록</a>
                {{#loginUserName}}
                    안녕하세요  <span id="user">{{loginUserName}} 님</span>
                    <a href="/logout" class="btn float-right btn-danger active" style="margin-right: 10px"; role="button">Logout</a>
                {{/loginUserName}}
                {{^loginUserName}}
                    <a href="/login" class="btn float-right btn-light active" style="margin-right: 10px"; role="button">
                        로그인
                    </a>
                {{/loginUserName}}
            </div>
        </div>
        <br>
        <!-- 목록 출력 영역 -->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
</div>
{{>layout/footer}}
